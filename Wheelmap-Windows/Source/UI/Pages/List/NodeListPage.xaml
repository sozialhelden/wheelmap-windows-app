<Page
    x:Class="Wheelmap_Windows.Source.UI.Pages.List.NodeListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wheelmap_Windows.Source.UI.Pages.List"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid 
        Background="#26333f"
        Width="360"
        >

        <ListView 
            x:Name="listView"
            SelectionChanged="Node_Selected">
            
            <ListView.ItemContainerTransitions>
                <TransitionCollection>
                    <!-- You can even omit this transition if desired -->
                </TransitionCollection>
            </ListView.ItemContainerTransitions>
            
            <ListView.Resources>
                <DataTemplate x:Key="nodeCell">
                    <Border BorderBrush="#444"  BorderThickness="0,0,0,1" >
                        <Grid Margin="5,5,5,5" >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock 
                                Grid.Column="0"
                                Grid.Row="0"
                                x:Name="name"
                                TextWrapping="Wrap" 
                                Text="{Binding name}"
                                Foreground="#fff"
                                FontWeight="Bold"
                                Width="auto" FontSize="14"/>

                            <TextBlock 
                                Grid.Column="0"
                                Grid.Row="1"
                                x:Name="category"
                                TextWrapping="Wrap" 
                                Text="{Binding category.localizedName}"
                                Foreground="#fff"
                                Width="auto" FontSize="14"/>

                            <Image
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Source="/Assets/Images/ic_more.png"
                                Height="40"
                                Width="40"
                                />

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.Resources>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <StaticResource ResourceKey="nodeCell"/>
            </ListView.ItemTemplate>
            
        </ListView>
    </Grid>
</Page>
