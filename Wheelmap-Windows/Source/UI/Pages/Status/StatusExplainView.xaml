<UserControl
    x:Class="Wheelmap_Windows.Source.UI.Pages.Status.StatusExplainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wheelmap_Windows.Source.UI.Pages.Status"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="400">

    <Grid>
        
        <StackPanel Margin="0,0,0,10"
                    Tapped="ToggleStatus_Tapped">

            <Grid
                  Padding="0,10,0,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image
                    x:Name="statusImage"
                    Height="40"
                    Width="40"
                    Grid.Column="0"/>

                <TextBlock 
                    x:Name="statusTitle"
                    Grid.Column="1"
                    FontWeight="Bold"
                    TextWrapping="WrapWholeWords"
                    VerticalAlignment="Center"/>

                <Image
                    x:Name="toggleStatusImage"
                    Grid.Column="2"
                    Height="40"
                    Width="40"
                    VerticalAlignment="Center"
                    Source="/Assets/Images/ic_choose_active.png"/>

            </Grid>

            <StackPanel
                Margin="10,0,10,0"
                x:Name="statusHintsContainer"/>

        </StackPanel>
    </Grid>
</UserControl>
