<Page
    x:Class="Wheelmap_Windows.Source.UI.Pages.Node.NodeDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wheelmap_Windows.Source.UI.Pages.Node"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#fff"
          Width="Auto"
          MinWidth="200"
          Padding="10,10,10,10">

        <StackPanel
            Width="Auto"
            MinWidth="200">
            
            <TextBlock 
                x:Name="nameBlock"
                Text="Cafe Einstein"
                Foreground="#000"
                FontSize="20"
                />
            
            <TextBlock
                x:Name="streetBlock"
                Text="Jerusalemer Straße 10"
                Foreground="#000"
                />

            <TextBlock
                x:Name="plzBlock"
                Text="10117 Berlin"
                Foreground="#000"
                />

            <TextBlock
                x:Name="urlBlock"
                Text="www.domain.de"
                Foreground="#000"
                />

            <TextBlock
                x:Name="phoneBlock"
                Text="030 123456789"
                Foreground="#000"
                />
            
        </StackPanel>
        
    </Grid>
</Page>
