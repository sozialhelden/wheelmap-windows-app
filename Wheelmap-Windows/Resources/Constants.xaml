<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wheelmap_Windows.Resources">

    <SolidColorBrush x:Key="PrimaryColor" Color="#2c3b49"/>
    <SolidColorBrush x:Key="AppBarBackgroundColor" Color="#EEF0F0F0"/>

    <SolidColorBrush x:Key="StatusYes" Color="#99c15c"/>
    <SolidColorBrush x:Key="StatusLimited" Color="#ed9b56"/>
    <SolidColorBrush x:Key="StatusNo" Color="#d23b3a"/>
    <SolidColorBrush x:Key="StatusUnknown" Color="#8b8c8d"/>

    <Style x:Key="TitleTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="bold"/>
        <Setter Property="Margin" Value="10,10,10,10"/>
    </Style>
    
</ResourceDictionary>
