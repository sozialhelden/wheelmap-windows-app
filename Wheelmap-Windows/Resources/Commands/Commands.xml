<?xml version="1.0" encoding="utf-8" ?>

<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">

  <CommandSet xml:lang="de-de" Name="de-de-CommandSet">

    <AppName>Wheelmap</AppName>
    
    <Example>Wo ist die nächste behindertengerechte Toilette</Example>

    <Command Name="testCommand">
      <Example>Test Command</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Öffne [mir] [meine] Karte</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Zeige [mir] [meine] Karte</ListenFor>
      <Feedback>Öffne Karte</Feedback>
      <!--<Navigate/>-->
      <VoiceCommandService Target="WheelmapVoiceCommandService"/>
    </Command>

    <Command Name="search">
      
      <Example> suche 'Bundle Schokowelt' </Example>

      <ListenFor RequireAppName="BeforePhrase"> Suche [nach] {dictatedSearchTerms} </ListenFor>
      <ListenFor RequireAppName="ExplicitlySpecified"> Suche [nach] {dictatedSearchTerms} in {builtin:AppName}</ListenFor>
      <ListenFor RequireAppName="BeforePhrase"> Finde {dictatedSearchTerms} </ListenFor>
      <ListenFor RequireAppName="ExplicitlySpecified"> Finde {dictatedSearchTerms} in {builtin:AppName}</ListenFor>
      <ListenFor RequireAppName="ExplicitlySpecified"> Durchsuche {builtin:AppName} nach {dictatedSearchTerms}</ListenFor>

      <!--Feedback provides the displayed and spoken text when your command is triggered -->
      <Feedback> Durchsuche Wheelmap... </Feedback>
      <VoiceCommandService Target="WheelmapVoiceCommandService"/>
    </Command>

    <Command Name="whereIs">
     
      <Example> Wo ist der nächste Geldautomat </Example>

      <ListenFor RequireAppName="BeforeOrAfterPhrase"> Wo ist [der] [das] [die] [nächste] [nächster] [behindertengerechte] [behindertengerechter]  {nodeTypes} </ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> Wo finde [ich] [den] [das] [die] [nächste] [nächsten] [behindertengerechte] [behindertengerechter] {nodeTypes} </ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> Wo finde [ich] [den] [das] [die] [nächste] [behindertengerechte] [behindertengerechter] {nodeTypes} [in] [meiner] [Nähe]</ListenFor>

      <Feedback> Durchsuche Wheelmap... </Feedback>
      <VoiceCommandService Target="WheelmapVoiceCommandService"/>
    </Command>
    
    <PhraseList Label="nodeTypes"/>
    
    <PhraseTopic Label="dictatedSearchTerms" Scenario="Search"/>

    
  </CommandSet>
  
</VoiceCommands>